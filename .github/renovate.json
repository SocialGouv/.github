{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "extends": ["local>SocialGouv/renovate-config", ":automergeAll"],
  "packageRules": [
    {
      "matchDatasources": ["git-refs"],
      "major": {
        "semanticCommitType": "feat"
      },
      "minor": {
        "semanticCommitType": "feat"
      },
      "patch": {
        "semanticCommitType": "fix"
      }
    }
  ]
}
